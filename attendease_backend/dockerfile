# ---- Stage 1: Build the WAR ----
FROM maven:3.9.4-eclipse-temurin-17 AS build
WORKDIR /app

# Copy pom.xml and download dependencies first (better caching)
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copy the rest of the source code and build
COPY src ./src
RUN mvn clean package -DskipTests

# ---- Stage 2: Run with Tomcat ----
FROM tomcat:9.0-jdk17
WORKDIR /usr/local/tomcat

# Remove default apps
RUN rm -rf webapps/*

# Remove default server.xml and copy your custom one
RUN rm -rf conf/server.xml
COPY tomcat/server.xml conf/

# Copy WAR from build stage
COPY --from=build /app/target/attendease_backend.war webapps/ROOT.war

# Expose any port (Render uses $PORT automatically)
EXPOSE 8080

# Start Tomcat normally (Render will inject $PORT into server.xml)
CMD ["catalina.sh", "run"]
