# ---- Stage 1: Build the WAR ----
FROM maven:3.9.4-eclipse-temurin-17 AS build
WORKDIR /app

# Copy pom.xml and download dependencies first (for caching)
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copy source and build WAR
COPY src ./src
RUN mvn clean package -DskipTests

# ---- Stage 2: Run with Tomcat ----
FROM tomcat:9.0-jdk17
WORKDIR /usr/local/tomcat

# Remove default apps
RUN rm -rf webapps/*

# Copy our custom server.xml template
RUN rm -f conf/server.xml
COPY tomcat/server.xml conf/server.xml

# Copy WAR from build stage
COPY --from=build /app/target/attendease_backend.war webapps/ROOT.war

# Expose port (Render will override with $PORT anyway)
EXPOSE 8080

# At runtime, replace __PORT__ with actual $PORT from Render
CMD sed -i "s/__PORT__/${PORT}/" conf/server.xml && catalina.sh run
