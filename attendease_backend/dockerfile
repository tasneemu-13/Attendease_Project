# ---- Stage 1: Build the WAR ----
FROM maven:3.9.4-eclipse-temurin-17 AS build
WORKDIR /app

# Copy pom.xml and download dependencies first (for caching)
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copy source and build WAR
COPY src ./src
RUN mvn clean package -DskipTests

# ---- Stage 2: Run with Tomcat ----
FROM tomcat:9.0-jdk17
WORKDIR /usr/local/tomcat

# Remove default apps
RUN rm -rf webapps/*

# Remove default server.xml and copy custom one with placeholder
RUN rm -rf conf/server.xml
COPY tomcat/server.xml conf/server.xml

# Copy WAR from build stage
COPY --from=build /app/target/attendease_backend.war webapps/ROOT.war

# Expose (Render assigns a dynamic $PORT, we'll patch below)
EXPOSE 8080

# Replace ${PORT} in server.xml with actual $PORT at runtime, then run Tomcat
CMD sed -i "s/\${PORT}/$PORT/" conf/server.xml && catalina.sh run
